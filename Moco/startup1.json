[
  {
    "description":"这是一个注释行，可以在这添加对接口得描述",
    "request":{
      "uri":"/demo",
      "method":"get",
      "queries":{
        "name":"ranxi",
        "age":"21"
      },
      "version":"HTTP/1.0",
      "redirectTo":"http://www.baidu.com"
    },
    "response":{
      "text":"ONE!!!"
    }
  },
  {
    "description":"这是一个post方法",
    "request":{
      "uri":"/demo/post",
      "method":"post",
      "headers":{
        "content-type":"application/json"
      },
      "cookies":{
        "login":"true"
      },
      "forms":{
        "name":"ranxi",
        "age":"21"
      }
    },
    "response":{
      "status":200,
      "json":{
        "name":"wangwenjing"
      }
    }
  },
  {
    "description":"request的内容必须是xml，且等于<request><parameters><id>1</id></parameters></request>,才能匹配此接口",
    "request":{
      "text":{
        "xml":"<request><parameters><id>1</id></parameters></request>"
      }
    },
    "response":{
      "text":"ONE!!!"
    }
  },
  {
    "description":"request的内容必须是xml，且与your_file.xml文件内容一致,才能匹配此接口",
    "request":{
      "text":{
        "xml":"your_file.xml"
      },
      "xpaths":{
        "/request/parameters/id/text()":"1"
      }
    },
    "response":{
      "text":"ONE!!!"
    }
  },
  {
    "description":"json快捷语法,才能匹配此接口",
    "request":{
      "uri":{
        "match":"/\\w*/one"
      },
      "text":{
        "json":"{\"one\":\"two\"}"
      }
    },
    "response":{
      "text":"ONE!!!",
      "file":"bar.response",
      "charset":"UTF-8"
    }
  },
  {
    "description":"挂载文件dir到uri路径",
    "mount":{
      "dir":"dir",
      "uri":"/uri"
    }
  }
]